extends ./layouts/main.pug
block content
  .menu
    ul.nav.nav-tabs
      a(href='/home')
        li.glyphicon.glyphicon-home
      a(href='/profile')
        li.glyphicon.glyphicon-user
      a(href='/twit')
        li.glyphicon.glyphicon-pencil
  .row
    .col-sm-6.col-sm-offset-3.form-box
      .form-top
        .form-top-left
          h3 Add your tweet
        .form-top-right
          i.fa.fa-pencil.fa-4x
      .form-bottom
        form(action='/twit' method="POST")
          .form-group
            label.sr-only(for="form-tweetText") tweet-text
            input.form-control(type="text" name="tweetText" maxlength='140' placeholder="What's happen... Add your tweet...!!")

          .form-group
            button.btn(type="submit") Tweet !!

